<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
 
	<!-- Persistence Provider -->
	<!-- RESOURCE-LOCAL: Application-managed transactions -->
	<!-- JTA: Container-managed transactions -->
	<persistence-unit name="MtM" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
 
		<!-- Entity Class  -->
		<class>sample.db.pojos.Company</class> 
		<class>sample.db.pojos.Employee</class>
		<class>sample.db.pojos.Hospital</class>
		<class>sample.db.pojos.Instrument</class> 
		<class>sample.db.pojos.Machinery</class> 
		<class>sample.db.pojos.Material</class> 
		<class>sample.db.pojos.Order</class> 
		<class>sample.db.pojos.Warehouse</class> 
 		
 		<!---->
		<properties>	
			<!-- Connection properties -->
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
		    <property name="javax.persistence.jdbc.url"	value="jdbc:sqlite:./db/mtm.db" /> <!--Where is the database-->
			<!-- Fill if we need user and password -->
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />
		    
		    <!-- Controls logging level -->
		    <property name="eclipselink.logging.level" value="INFO" />
		    <!-- <property name="eclipselink.logging.level" value="ALL" /> --> <!--if I have errors-->

			<!-- JPA doesn't create the schema -->
			<property name="eclipselink.ddl-generation" value="none" />
			<!-- JPA destroys and recreates the schema -->
			<!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables" /> -->
		</properties>
 
	</persistence-unit>
</persistence>
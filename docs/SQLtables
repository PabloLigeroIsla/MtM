CREATE TABLE machinery(
machinery_ID INTEGER  PRIMARY KEY AUTOINCREMENT,
machineryType TEXT,
stateofMachinery TEXT NOT NULL,
dateofInstallation DATE,
sizeofMachinery INTEGER);

